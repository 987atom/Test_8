        <TextBox x:Name="txt_ser" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" Height="197" Grid.RowSpan="4" Grid.ColumnSpan="3" Margin="10,0,0,0" Grid.Row="1"/>
        <TextBox x:Name="txt_deser" Grid.Column="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="280" Height="197" Grid.RowSpan="4" Grid.ColumnSpan="3" Margin="10,0,0,0" Grid.Row="1"/>
        <TextBlock Grid.Column="3" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" TextWrapping="Wrap" Text="Ниже впешите путь к файлу" VerticalAlignment="Center" Width="180" Grid.ColumnSpan="2" Height="35" TextAlignment="Center"/>
        <TextBox x:Name="path" Grid.Column="3" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="6" TextWrapping="Wrap" Text="C:\\Users\\Matvey\\source\\repos\\8_Test\\obj1.json" VerticalAlignment="Center" Width="180" Grid.ColumnSpan="2" Height="34"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Введите текст для сериализации" VerticalAlignment="Center" Height="34" Width="280" Grid.ColumnSpan="3" Margin="10,0,0,0"/>
